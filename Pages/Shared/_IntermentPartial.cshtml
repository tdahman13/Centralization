@model Centralization.Models.IntermentProfile

    <div class="card">
        <div class="card-header">
            <h4 class="text-center">@Html.DisplayFor(model => model.Interred.FullName)</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                @*<dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.interred.FullName)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.interred.FullName)
                </dd>*@
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Interred.CemName)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.Interred.CemName)
                </dd>
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Interred.Location)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.Interred.Location)
                </dd>
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Interred.IDate)
                </dt>
                <dd class="col-md-6">
                    @Html.DisplayFor(model => model.Interred.IDate)
                </dd>
                <dt class="col-md-6">
                    @Html.DisplayNameFor(model => model.Interred.EasementNo)
                </dt>
                <dd class="col-md-6">
                    @if (string.IsNullOrEmpty(Model.Interred.EasementNo))
                    {
                        @Html.Label("N/A")
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.Interred.EasementNo)
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-4 image-column">
                    <h5 class="text-center">Interment Order</h5>
                    @if (Model.IntermentOrderImages.Count == 0)
                    {
                        <p class="alert alert-danger">No Results Were Found</p>
                    }
                    else
                    {
                        <div id="IOimagesCarousel" class="carousel slide" data-ride="carousel">
                            @if (Model.IntermentOrderImages.Count > 1)
                            {
                                <ol class="carousel-indicators">
                                    <li data-target="#IOimagesCarousel" data-slide-to="0" class="active"></li>
                                    @for (int i = 1; i < Model.IntermentOrderImages.Count; i++)
                                    {
                                        <li data-target="#IOimagesCarousel" data-slide-to="@i"></li>
                                    }
                                </ol>
                            }
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <a href="#" class="with-caption image-link" data-mfp-src="@Model.IntermentOrderImages.ElementAt(0)" data->
                                        <img src="@Model.IntermentOrderImages.ElementAt(0)" class="d-block w-100 my-image" alt="..." id="IOimage0" />
                                    </a>
                                </div>

                                @for (int i = 1; i < Model.IntermentOrderImages.Count; i++)
                                {
                                    <div class="carousel-item">
                                        <a href="#" class="with-caption image-link" data-mfp-src="@Model.IntermentOrderImages.ElementAt(i)">
                                            <img src="@Model.IntermentOrderImages.ElementAt(i)" class="d-block w-100 my-image" alt="..." id="@string.Format("IOimage{0}", i+1)" />
                                        </a>
                                    </div>
                                }
                            </div>
                            @if (Model.IntermentOrderImages.Count > 1)
                            {
                                <a class="carousel-control-prev" href="#IOimagesCarousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#IOimagesCarousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            }
                        </div>
                    }
                </div>
