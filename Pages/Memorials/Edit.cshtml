@page
@model Centralization.Pages.Memorials.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MemorialApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemorialApplication.MemorialApplicationId" />
            <div class="form-group">
                <label asp-for="MemorialApplication.FileName" class="control-label"></label>
                <input asp-for="MemorialApplication.FileName" class="form-control" />
                <span asp-validation-for="MemorialApplication.FileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemorialApplication.FilePath" class="control-label"></label>
                <input asp-for="MemorialApplication.FilePath" class="form-control" />
                <span asp-validation-for="MemorialApplication.FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemorialApplication.Type" class="control-label"></label>
                <select asp-for="MemorialApplication.Type" class="form-control" 
                        asp-items="Html.GetEnumSelectList<Centralization.Models.ApplicationType>()"></select>
                <span asp-validation-for="MemorialApplication.Type" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.MemorialApplication.UploadDate)
            <div class="form-group">
                <label asp-for="MemorialApplication.UploadedBy" class="control-label"></label>
                <input asp-for="MemorialApplication.UploadedBy" class="form-control" />
                <span asp-validation-for="MemorialApplication.UploadedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemorialApplication.CemNo" class="control-label"></label>
                <select asp-for="MemorialApplication.CemNo" class="form-control"
                        asp-items="Centralization.Models.Cemeteries.cemeteriesSelectList"></select>
                <span asp-validation-for="MemorialApplication.CemNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-7 offset-md-1">
        <h4>Interments</h4>
        @foreach(var interred in Model.Interments)
        {
            <p>@interred.Label</p>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
