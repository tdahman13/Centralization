@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
<link rel="stylesheet" href="~/css/home.css" />
<link rel="stylesheet" href="~/magnific-popup.js/magnific-popup.css" />

<div class="jumbotron" style="background-color: #669bf9;">
    <h1 class="text-center">Search For A Deceased</h1>
    <p class="lead">
        Type in a name and select to fill form (min 2 characters). Select a cemetery for better search.
    </p>
    <div class="form-row">
        @Html.Label("Cemetery", null, htmlAttributes: new { @class = "col-form-label col-12 col-md-3", @for = "cemeterySearch" })
        @Html.DropDownList("cemterySearch", (IEnumerable<SelectListItem>)Model.cemeteries,
            "Select ...", new { @class = "form-control col-12 col-md-9 mb-2 mb-md-3"})
        @Html.Label("Name (Last, First)", null, htmlAttributes: new { @class = "col-form-label col-12 col-md-3", @for = "searchName"})
        @Html.TextBox("searchName", null, 
            new { @class = "form-control col-12 col-md-9 md-2 mb-md-3", @placeholder = "Last name, First name..."})
        <button class="btn bg-transparent" style="margin-left: -30px; z-index: 100; padding:0rem 0rem 1rem 0rem;"
                type="button" onclick="clearInput(this)">
            <i class="ui-icon ui-icon-close"></i>
        </button>

        @Html.Label("Name (Full)", null, htmlAttributes: new { @class = "col-form-label col-12 col-md-3", @for = "searchFull" })
        @Html.TextBox("searchFull", null, new { @class = "form-control col-12 col-md-9", @placeholder = "Type 2 characters to start searching..." })
        <button class="btn bg-transparent" style="margin-left:-30px; z-index: 100; padding: 0rem 0rem 0rem 0rem;" type="button" onclick="clearInput(this)">
            <i class="ui-icon ui-icon-close"></i>
        </button>
    </div>
</div>

<div class="row">
    <div id="partialGoesHere" class="col-12">

    </div>
    <div style="display:none" id="loading-image" class="col-12">
        <img src="@Url.Content("~/circle.gif")" class="rounded mx-auto d-block img-fluid" alt="loading">
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/js/GetNames.js")" type="text/javascript"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/magnific-popup.js/jquery.magnific-popup.js"></script>
}